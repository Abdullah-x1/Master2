@model DSAR.Models.ViewModels.ResetPasswordViewModel
<link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

<div class="container form-container">
    <h2 class="form-title">إعادة تعيين كلمة المرور</h2>

    <form asp-action="ResetPassword" method="post">
        <input type="hidden" asp-for="IdentityGuid" />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-submit">تعيين كلمة المرور الجديدة</button>

        <div class="d-flex justify-content-between mt-3">
            <a asp-action="EditUser" asp-route-id="@Model.IdentityGuid" class="btn btn-secondary">
                العودة للتعديل
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

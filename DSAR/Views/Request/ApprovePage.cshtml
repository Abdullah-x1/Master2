@model DSAR.ViewModels.RequestViewModel
@{
    Layout = null;
    var attachments = ViewBag.Attachments as List<CaseStudyAttachmentMetadata>;
    var caseStudyAttachment = attachments?.FirstOrDefault(a => a.FieldName == "CaseStudyAttachment");
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>المراجع والملاحظات</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(135deg, #8BC6EC 0%, #9599E2 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            background: white;
            width: 1288px;
            min-height: 729px;
            height: auto;
            border-radius: 20px;
            position: relative;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            padding: 40px;
            direction: rtl;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        th {
            background-color: #f8f9fa;
            padding: 15px;
            text-align: center;
            border: 1px solid #dee2e6;
            font-size: 18px;
            color: #333;
        }

        td {
            border: 1px solid #dee2e6;
            padding: 15px;
            height: 60px;
            vertical-align: top;
        }

        .notes-input {
            width: 600px;
            height: 120px;
            padding: 10px;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            resize: none;
            font-size: 14px;
            margin-bottom: 30px;
            display: block;
            text-align: right;
            direction: ltr;
            float: right;
        }

        .form-group {
            margin-top: 40px;
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-control {
            padding: 10px;
            border-radius: 6px;
            border: 1px solid #dee2e6;
            font-size: 14px;
        }

        textarea.form-control {
            height: 120px;
            overflow-y: auto;
            resize: none;
            background-color: #f5f5f5;
            color: #555;
            opacity: 0.7;
            font-family: inherit;
        }


        .buttons {
            position: absolute;
            bottom: 40px;
            left: 40px;
            display: flex;
            gap: 20px;
        }

        .btn {
            padding: 12px 30px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 500;
            color: white;
            cursor: pointer;
            text-decoration: none;
            transition: opacity 0.3s ease;
        }



            .btn:hover {
                opacity: 0.9;
            }

        .reject-btn {
            background: #933740;
        }

        .accept-btn {
            background: #216e33;
        }

        .attachment-label img {
            width: 24px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <form method="post" asp-action="Approve" asp-route-requestId="@Model.RequestId" asp-route-actionId="@Model.ActionId" class="container">


        <table>
            <tr>
                <th>الملاحظات</th>
                <th>المراجع</th>

            </tr>
            <tr>
                <td>@Model.SectionNotes</td>
                <td>ملاحظة مدير القسم</td>
            </tr>
            <tr>
                <td asp-for="DepartmentNotes">@Model.DepartmentNotes</td>
                <td asp-for="DepartmentNotes">ملاحظة مدير الإدارة</td>
            </tr>

        </table>
        @if (User.IsInRole("SectionManager"))
        {
            <textarea asp-for="SectionNotes" class="notes-input" placeholder="ذكر الملاحظات إن وجدت"></textarea>
        }
        @if (User.IsInRole("DepartmentManager"))
        {
            <textarea asp-for="DepartmentNotes" class="notes-input" placeholder="ذكر الملاحظات إن وجدت"></textarea>
        }

        @if ((User.IsInRole("ApplicationManager") || User.IsInRole("AdministrationManager")) && Model.LevelId >= 4)
        {
            <p>Request Level: @Model.LevelId</p>

            <div class="form-group">
                <label asp-for="WorkTeam">فريق العمل</label>
    <textarea asp-for="WorkTeam" placeholder="" class="form-control" rows="4" readonly>@Model.WorkTeam</textarea>
            </div>

            <div class="form-group">
                <label asp-for="Notes">الملاحظات</label>
                <textarea asp-for="Notes" class="form-control" rows="4" readonly>@Model.Notes</textarea>
            </div>

            <div class="form-group">
                <label asp-for="restriction">القيود</label>
                <textarea asp-for="restriction" class="form-control" rows="4" readonly>@Model.restriction</textarea>
            </div>



            <div class="attachment-section" style="margin-top: 20px;">
               
                @if (caseStudyAttachment != null)
                {
                    <div class="attachment-section" style="margin-top: 20px;">
                        <label style="font-weight:bold;">المرفق:</label>
                        <a href="@Url.Action("DownloadCaseStudyAttachment", "Request", new { attachmentId = caseStudyAttachment.Id })"
                           class="attachment-link"
                           style="display:block; margin-top: 8px; color: #1e90ff; font-weight: bold; text-decoration: none;">
                            @caseStudyAttachment.FileName@caseStudyAttachment.FileExtension
                        </a>
                    </div>
                }
                else
                {
                    <span class="no-attachment" style="color: #888; font-style: italic;">لا يوجد مرفق</span>
                }

            </div>

        }
        <div class="buttons">
            <button name="decision" value="decline" class="btn reject-btn">رفض الطلب</button>
            <button name="decision" value="approve" class="btn accept-btn">قبول الطلب</button>
        </div>
    </form>
</body>
</html>









@model DSAR.ViewModels.RequestViewModel

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <title>Step 1</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Your Custom CSS -->
    <link rel="stylesheet" href="~/css/steps.css" asp-append-version="true" />
    <script src="~/js/updateFileName.js" asp-append-version="true"></script>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/css/Script.js" asp-append-version="true"></script>
    <script src="~/js/form-handler.js" asp-append-version="true"></script>
    <script src="~/js/file-validator.js" asp-append-version="true"></script>
</head>

<body>
    <partial name="_ValidationScriptsPartial" />
    <form asp-action="Step1" id="step1Form" method="post" enctype="multipart/form-data" asp-antiforgery="true">
        <div class="form-container position-relative">
            <div class="right-column column">
                <div class="required-wrapper">
                    <span class="required-asterisk">*</span>
                    <textarea asp-for="Field1" class="in1" placeholder="يتم كتابة اسم الخدمة المطلوبة">@Model.Field1</textarea>
                    <span asp-validation-for="Field1" class="text-danger"></span>
                </div>

                <div class="required-wrapper">
                    <span class="required-asterisk">*</span>
                    <textarea asp-for="Field2" class="in1" placeholder="يتم تحديد نوع الخدمة وموقعها">@Model.Field2</textarea>
                    <span asp-validation-for="Field2" class="text-danger"></span>
                </div>

                <div class="required-wrapper">
                    <span class="required-asterisk">*</span>
                    <textarea asp-for="Field3" class="in2" placeholder="يتم كتابة وصف تفصيلي للخدمة المطلوب تطويرها">@Model.Field3</textarea>
                    <span asp-validation-for="Field3" class="text-danger"></span>
                </div>

                <div class="radio-section">
                    <label>هل توجد اعتمادية على خدمات حالية؟</label>
                    <div class="radio-options">
                        <label><input type="radio" name="Depend" value="yes" @(Model.Depend == "yes" ? "checked" : "") /> نعم</label>
                        <label><input type="radio" name="Depend" value="no" @(Model.Depend == "no" ? "checked" : "") /> لا</label>
                    </div>
                </div>
            </div>

            <div class="left-column column">
                <textarea asp-for="Field4" class="in1" placeholder="توضيح الاعتمادية ان وجد">@Model.Field4</textarea>
                <textarea asp-for="Field5" class="in1" placeholder="رقم الإجراء الإداري إن وجد">@Model.Field5</textarea>

                <label for="Attachment1" class="form-label">إرفاق ملف الإجراء الإداري إن وجد:</label><br />
                <label for="Attachment1" style="cursor: pointer;">
                    <img src="~/images/link.png" alt="إرفاق ملف" width="24" />
                    اختر ملف
                </label>

                <input type="file" multiple name="Attachment1" id="Attachment1" class="d-none"
                       accept=".doc,.docx,.xls,.xlsx,.pdf,image/*"
                       onchange="updateFileName('Attachment1', 'Attachment1Name')" />

                <span id="Attachment1Name" class="text-muted mt-2 d-block"
                      data-existing="@Model.Attachment1Id?.Count">
                </span>

                @if (Model.Attachment1Id != null && Model.Attachment1Id.Any())
                {
                    <div class="text-info mt-1">
                        <i class="bi bi-paperclip me-1"></i> الملفات الحالية:
                        <ul class="attached-files">
                            @for (int i = 0; i < Model.Attachment1Id.Count; i++)
                            {
                                <li>
                                    <a href="@Url.Action("DownloadSnapshotAttachment", "Request", new { attachmentId = Model.Attachment1Id[i] })" target="_blank">
                                        @Model.Attachment1Name[i]
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                }


                <div id="statusMessage"></div>
            </div>

            <div class="d-flex justify-content-between align-items-center position-absolute bottom-0 start-0 end-0 p-3">
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Main", "Account")'">السابق</button>

                <div class="d-flex gap-2">
                    <button type="button" id="saveButton" class="btn btn-success d-flex align-items-center" name="action" value="save">
                        <i class="bi bi-save me-2"></i> حفظ
                    </button>

                    <button type="submit" class="btn btn-primary" name="action" value="next">التالي</button>
                </div>
            </div>
        </div>
    </form>

    <script>
        setupAjaxSave('#step1Form', '#saveButton', '@Url.Action("Step1", "Request")');
        setupFileValidation('#Attachment1', '#Attachment1Name');
    </script>
</body>
</html>



@if (ViewBag.ShowTermsPopup == true)
{
    <div id="termsPopup" class="popup-overlay">
        <div class="popup-content">
            <h1>المتطلبات والشروط والأحكام:</h1>
            <ul class="requirements">
                <li>جميع الوثائق يجب ان تكون سارية المفعول</li>
                <li>عدم وجود طلب قائم لنفس الخدمة</li>
                <li>استكمال جميع الحقول المطلوبة</li>
                <li>الطلبات الغير نشطة يتم اغلاقها</li>
                <li>مقدم الطلب يجب ان يكون موظف رسمي بالهيئة الملكية</li>
                <li>يجب ارفاق جميع موافقات المدن</li>
            </ul>
            <div class="checkbox-container">
                <label>
                    <input type="checkbox" id="termsCheckbox" />
                    اوافق على الشروط والأحكام
                </label>
            </div>
            <div class="popup-buttons">
                <button class="popup-btn back-btn" onclick="location.href='@Url.Action("Main", "Account")'">رجوع</button>
                <button class="popup-btn confirm-btn" id="acceptTermsBtn" disabled>موافق</button>
            </div>
        </div>
    </div>

    <script>
        const termsCheckbox = document.getElementById('termsCheckbox');
        const acceptBtn = document.getElementById('acceptTermsBtn');
        const popup = document.getElementById('termsPopup');

        termsCheckbox.addEventListener('change', () => {
            acceptBtn.disabled = !termsCheckbox.checked;
        });

        acceptBtn.addEventListener('click', () => {
            if (!termsCheckbox.checked) return;

            fetch('@Url.Action("AcceptTerms", "Request")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                body: JSON.stringify({})
            })
            .then(res => {
                if (res.ok) {
                    popup.style.display = 'none';
                } else {
                    alert('حدث خطأ في الموافقة، حاول مرة أخرى.');
                }
            });
        });
    </script>
}

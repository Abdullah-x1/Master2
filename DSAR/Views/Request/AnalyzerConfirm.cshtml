@model DSAR.ViewModels.CaseStudyViewModel

@{
    ViewData["Title"] = "Confirm Analyzer";
}

<h2>Confirm Analyzer</h2>

<div class="card p-4">
    <p><strong>Analyzer ID:</strong> @Model.UserId</p>
    <p><strong>First Name:</strong> @Model.FirstName</p>
    <p><strong>Last Name:</strong> @Model.LastName</p>

    <form asp-action="AnalyzerConfirm" method="post">
        <input type="hidden" name="UserId" value="@Model.UserId" />
        <button type="submit" class="btn btn-success">Confirm</button>
        <a asp-action="ListAnalyzers" class="btn btn-secondary">Cancel</a>
    </form>
</div>

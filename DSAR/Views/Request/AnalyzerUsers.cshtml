@model IEnumerable<DSAR.ViewModels.CaseStudyViewModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <title>اختيار المحلل</title>
    <style>
        body {
            margin: 0;
            background: linear-gradient(to right, #6dc1a8, #7ab8ea);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            padding: 0;
        }

        .container {
            background: white;
            width: 1288px;
            height: 729px;
            border-radius: 20px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            padding: 40px;
            box-sizing: border-box;
            overflow-y: auto;
            direction: rtl;
        }

        h2 {
            text-align: center;
            font-size: 26px;
            margin-bottom: 30px;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ccc;
            text-align: center;
            padding: 12px;
            font-size: 16px;
        }

        th {
            background-color: #f2f2f2;
            color: #333;
            font-weight: bold;
        }

        td {
            background-color: #fafafa;
            color: #444;
        }

        .btn {
            padding: 6px 16px;
            font-size: 14px;
            border-radius: 6px;
            text-decoration: none;
            color: #fff;
            background-color: #287067;
            border: none;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

            .btn:hover {
                background-color: #1f5a52;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>اختيار المحلل</h2>

        <table>
            <thead>
                <tr>
                    <th>المحلل</th>
                    <th>اسم المحلل</th>

                    <th>اختيار</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var analyzer in Model)
                {
                    <tr>
                        <td>@analyzer.UserId</td>
                        <td>@analyzer.FirstName</td>

                        <td>
                            <a asp-action="ConfirmAnalyzer"
                               asp-controller="Request"
                               asp-route-requestId="@analyzer.RequestId"
                               asp-route-userId="@analyzer.Id"
                               class="btn">
                                اختيار
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

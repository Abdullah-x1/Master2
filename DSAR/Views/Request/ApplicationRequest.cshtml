@model IEnumerable<DSAR.ViewModels.RequestViewModel>

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <title>الطلبات السابقة</title>
    <style>
        body {
            font-family: sans-serif;
            background: linear-gradient(to right, #6dc1a8, #7ab8ea);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        table {
            width: 80%;
            border-collapse: collapse;
            margin: 20px 0;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
        }

        td {
            cursor: pointer;
        }

            td:hover {
                background-color: #f1f1f1;
            }
    </style>
</head>
<body>
    <h2>الطلبات السابقة</h2>
    <table>
        <thead>
            <tr>
                <th>رقم الطلب</th> <!-- Order Number Column -->

                <th>الإجراء</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>
                        <a asp-action="ViewSubmission" asp-route-levelId="@request.LevelId" asp-route-id="@request.RequestId">@request.RequestId</a>
                    </td>
                    <td>@request.FirstName @request.LastName</td>
                    <td>@request.DepartmentName</td>

                    <td>
                        <a asp-action="Approve" asp-route-id="@request.RequestId" class="btn btn-success">Approve</a>
                        <a asp-action="Reject" asp-route-id="@request.RequestId" class="btn btn-danger">Reject</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

@model DSAR.ViewModels.RequestViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <title>عرض الوصف التفصيلي</title>
    <style>
        body {
            margin: 0;
            background: linear-gradient(to right, #6dc1a8, #7ab8ea);
            font-family: sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .header-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background: transparent;
            z-index: 10;
        }

        .form-container {
            background-color: white;
            width: 1288px;
            height: 729px;
            display: flex;
            flex-direction: row;
            padding: 40px;
            box-sizing: border-box;
            border-radius: 10px;
            position: relative;
            overflow-y: auto;
        }

        .content-wrapper {
            flex: 1;
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        h3 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: right;
            background-color: #f5f5f5;
        }

        th {
            background-color: #e0e0e0;
        }


        .actions {
            margin-top: auto;
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            justify-content: flex-end;
        }


        .arrow {
            position: absolute;
            font-size: 32px;
            cursor: pointer;
            color: #00c9a7;
            border: none;
            background: transparent;
            padding: 0;
            outline: none;
        }


        .arrow-left {
            left: 20px;
            bottom: 20px;
        }

        .arrow-right {
            right: 20px;
            bottom: 20px;
        }

        .arrow img {
            width: 32px;
            height: 32px;
            filter: brightness(0) saturate(100%) invert(52%) sepia(88%) saturate(350%) hue-rotate(120deg);
        }
    </style>
</head>
<body>


    <div class="form-container">
        <div class="content-wrapper">
            <h3>تفاصيل إضافية</h3>

            <table>
                <thead>
                    <tr>
                        <th>الوصف 1</th>
                        <th>الوصف 2</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Descriptions)
                    {
                        <tr>
                            <td>@item.Description1</td>
                            <td>@item.Description2</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="actions">
                <a href="@Url.Action("ViewSubmission3", "Request", new { id = Model.FormId })">
                    <button type="button" class="arrow arrow-left" onclick="location.href='@Url.Action("Step1", "Request")'">
                        <img src="~/images/arrowL.png" alt="السابق" />
                    </button>
                </a>

                @if (User.IsInRole("ApplicationManager") && Model.LevelId == 6)
                {
                    <a asp-action="ApprovePage" asp-route-actionId="@Model.ActionId" asp-route-requestId="@Model.FormId">
                        <button type="submit" class="arrow arrow-right">
                            <img src="~/images/arrowR.png" alt="التالي" />
                        </button>
                    </a>
                }

                @if (User.IsInRole("ApplicationManager") && Model.LevelId == 4)
                {
                    <a asp-action="AnalyzerUsers" asp-route-requestId="@Model.FormId">
                        <button type="submit" class="arrow arrow-right">
                            <img src="~/images/arrowR.png" alt="التالي" />
                        </button>
                    </a>
                }

                @if (User.IsInRole("SectionManager") || User.IsInRole("DepartmentManager") || User.IsInRole("ITManager"))
                {

                    <a asp-action="ApprovePage" asp-route-actionId="@Model.ActionId" asp-route-requestId="@Model.FormId">
                        <button type="submit" class="arrow arrow-right">
                            <img src="~/images/arrowR.png" alt="التالي" />
                        </button>
                    </a>

                }

                @if (User.IsInRole("Analyzer"))
                {
                    <a asp-action="CaseStudy" asp-route-requestId="@Model.FormId">
                        <button type="submit" class="arrow arrow-right">
                            <img src="~/images/arrowR.png" alt="التالي" />
                        </button>
                    </a>
                }
                
            </div>
        </div>
    </div>
</body>
</html>

@model DSAR.ViewModels.RequestViewModel

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>الصفحة الرابعة من النموذج</title>

    <link rel="stylesheet" href="~/css/steps.css" asp-append-version="true" />
    <script src="~/css/Script.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Your shared scripts -->
    <script src="~/js/form-handler.js" asp-append-version="true"></script>
    <script src="~/js/file-validator.js" asp-append-version="true"></script>
</head>
<body>
    <form asp-action="Step4" id="step4Form" method="post" enctype="multipart/form-data">
        <div class="form-container">
            <!-- Right Column -->
            <div class="right-column column">
                <textarea asp-for="Workflow" class="in3" placeholder="يتم توضيح مسار العمل للخدمة بطريقة رسم (Workflow) توضيحي"></textarea>
                <span asp-validation-for="Workflow" class="text-danger"></span>
                <label for="workflowFile">
                    <img src="~/images/link.png" alt="إرفاق ملف" style="width: 24px;" />
                </label>

                @if (!string.IsNullOrEmpty(Model.WorkflowName) && Model.WorkflowAttachmentId > 0)
                {
                    <div class="text-info mt-1">
                        <i class="bi bi-paperclip me-1"></i> الملف الحالي:
                        <a href="@Url.Action("DownloadSnapshotAttachment", "Request", new { attachmentId = Model.WorkflowAttachmentId })" target="_blank">
                            @Model.WorkflowName
                        </a>
                    </div>
                }

                <span id="workflowFileName" class="text-muted d-block mt-1"></span>
                <input type="file" name="WorkflowFile" id="workflowFile" accept=".doc,.docx,.xls,.xlsx,.pdf,image/*" onchange="updateFileName('workflowFile', 'workflowFileName')" style="display: none;" />

                <textarea asp-for="UploadsRequired" class="in2" placeholder="يتم ذكر جميع المرفقات المطلوب إضافتها في الخدمة، مع تحديد إلزاميتها (الزامي او اختياري)"></textarea>
                <label for="uploadsRequiredFile">
                    <img src="~/images/link.png" alt="إرفاق ملف" style="width: 24px;" />
                </label>

                @if (!string.IsNullOrEmpty(Model.UploadsRequiredName) && Model.UploadsRequiredAttachmentId > 0)
                {
                    <div class="text-info mt-1">
                        <i class="bi bi-paperclip me-1"></i> الملف الحالي:
                        <a href="@Url.Action("DownloadSnapshotAttachment", "Request", new { attachmentId = Model.UploadsRequiredAttachmentId })" target="_blank">
                            @Model.UploadsRequiredName
                        </a>
                    </div>
                }

                <span id="uploadsRequiredFileName" class="text-muted d-block mt-1"></span>
                <input type="file" name="UploadsRequiredFile" id="uploadsRequiredFile" accept=".doc,.docx,.xls,.xlsx,.pdf,image/*" onchange="updateFileName('uploadsRequiredFile', 'uploadsRequiredFileName')" style="display: none;" />

                <textarea asp-for="Documents" class="in1" placeholder="وثائق الدعم؛ مثل (إجراءات العمل الموحد، لوائح وأنظمة)"></textarea>
                <label for="documentsFile">
                    <img src="~/images/link.png" alt="إرفاق ملف" style="width: 24px;" />
                </label>

                @if (!string.IsNullOrEmpty(Model.DocumentsName) && Model.DocumentsAttachmentId > 0)
                {
                    <div class="text-info mt-1">
                        <i class="bi bi-paperclip me-1"></i> الملف الحالي:
                        <a href="@Url.Action("DownloadSnapshotAttachment", "Request", new { attachmentId = Model.DocumentsAttachmentId })" target="_blank">
                            @Model.DocumentsName
                        </a>
                    </div>
                }

                <span id="documentsFileName" class="text-muted d-block mt-1"></span>
                <input type="file" name="DocumentsFile" id="documentsFile" accept=".doc,.docx,.xls,.xlsx,.pdf,image/*" onchange="updateFileName('documentsFile', 'documentsFileName')" style="display: none;" />
            </div>


            <!-- Left Column -->
            <div class="left-column column">
                <textarea asp-for="Timeline" class="in3" placeholder="المدة الزمنية لإنجاز الخدمة(مع حساب ايام الاجازات الرسمية)"></textarea>
                <span asp-validation-for="Timeline" class="text-danger"></span>

                <textarea asp-for="SystemNeeded" class="in2" placeholder="الأنظمة التي يتطلب الربط معها"></textarea>
                <textarea asp-for="Cities2" class="in3" placeholder="يتم ذكر المدن الموافقة على النموذج"></textarea>
                <textarea asp-for="DepartmentHeadName" class="in3" placeholder="اسم ممثل القطاع الموافق على النموذج"></textarea>
                <textarea asp-for="AdditionalNotes" class="in3" placeholder="وثائق الدعم"></textarea>
            </div>

            <!-- Navigation Arrows -->
            <div class="d-flex justify-content-between align-items-center position-absolute bottom-0 start-0 end-0 p-3">
                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Step2", "Request")'">السابق</button>

                <div class="d-flex gap-2">
                    <button type="button" id="saveButton" class="btn btn-success d-flex align-items-center" name="action" value="save">
                        <i class="bi bi-save me-2"></i> حفظ
                    </button>

                    <button type="submit" class="btn btn-primary" name="action" value="next">التالي</button>
                </div>
            </div>
        </div>
    </form>

    <script>
        setupAjaxSave(
            '#step4Form',
            '#saveButton',
            '@Url.Action("Step4", "Request")'
        );

        setupFileValidation('#workflowFile', '#workflowFileName');
        setupFileValidation('#uploadsRequiredFile', '#uploadsRequiredFileName');
        setupFileValidation('#documentsFile', '#documentsFileName');
    </script>
</body>
</html>
